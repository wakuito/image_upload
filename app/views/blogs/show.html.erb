<h1>ブログ詳細画面</h1>
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>
<p>
    <strong>Image:</strong>
    <% if @blog.image.present? %>
      <%= image_tag @blog.image.url %>
    <% else %>
      画像はありません
    <% end %>
  </p>

<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), data: { turbo_method: :delete}, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), data: { turbo_method: :post}, class: 'btn btn-primary' %>
  <% end %>
<% end %>
